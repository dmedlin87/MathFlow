{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@domain/*": ["../src/domain/*"]
    }
  },
  "include": ["src", "verify_standards.ts"]
}
